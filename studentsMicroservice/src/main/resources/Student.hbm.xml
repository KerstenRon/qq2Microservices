<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "dataObjects.Student" table = "students">

        <meta attribute = "class-description">
            This class contains the student detail.
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "firstName" column = "first_name" type = "string"/>
        <property name = "lastName" column = "last_name" type = "string"/>
        <property name = "matriculationNumber" column = "matriculation_number" type = "int"/>
        <property name = "course" column = "course" type = "string"/>
        <property name = "semester" column = "semester" type = "int"/>
        <property name = "email" column = "email" type = "string"/>

    </class>
</hibernate-mapping>